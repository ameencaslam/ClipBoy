{
  "name": "clipboy",
  "version": "1.0.0",
  "description": "A clipboard manager with drag-and-drop overlay for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": ["clipboard", "manager", "overlay"],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.clipboy.app",
    "productName": "ClipBoy",
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

